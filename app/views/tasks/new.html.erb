<div class="container">
  <h1>New Task</h1>
  <br>
  <%= form_with model: @task do |f| %>
  <div class="card">
    <div class="card-body">

      <div class="mb-3">
        <%= f.label :title %>
        <br>
        <%= f.text_field :title %>
      </div>

      <div class="mb-3">
        <%= f.label :details %>
        <br>
        <%= f.text_field :details %>
      </div>

      <%= f.submit "Create Task", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
  <hr>
  <%= link_to "Go back to list", tasks_path(@task) %>
</div>
